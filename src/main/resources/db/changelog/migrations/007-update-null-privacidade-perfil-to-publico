    <changeSet id="007-update-null-privacidade-perfil-to-publico" author="Lucas Xavier">
        <comment>
            Atualiza a privacidade de perfil dos usuários existentes que estão com valor NULL 
            para PUBLICO.
        </comment>
        <update tableName="users">
            <column name="privacidade_perfil" value="PUBLICO"/>
            <where>privacidade_perfil IS NULL</where>
        </update>
    </changeSet>

