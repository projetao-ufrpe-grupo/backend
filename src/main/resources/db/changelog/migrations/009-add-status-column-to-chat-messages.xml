<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="009-add-status-column-to-chat-messages" author="Lucas Xavier">
        <comment>
            Adiciona a coluna 'status' à tabela chat_messages para controlar o status das mensagens.
        </comment>
        
        <!-- Adiciona a nova coluna 'status' -->
        <addColumn tableName="chat_messages">
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        
        <!-- Define um valor padrão para as mensagens existentes -->
        <update tableName="chat_messages">
            <column name="status" value="SENT"/>
            <where>status IS NULL</where>
        </update>
    </changeSet>

</databaseChangeLog>